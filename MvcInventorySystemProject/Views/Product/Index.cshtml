@using MvcInventorySystemProject.Models.Entity
@model List<Tbl_Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Remaining Stock</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.ProductID</td>
                <td>@prod.ProductName</td>
                <td>@prod.Brand</td>
                <td>@prod.Tbl_Categories.CategoryName</td>
                <td>@prod.Price</td>
                <td>@prod.Stock</td>
                <td><a href="/Product/Delete/@prod.ProductID" class="btn btn-danger">DELETE</a></td>
                <td><a href="/Product/GetProduct/@prod.ProductID" class="btn btn-warning">UPDATE</a></td>
            </tr>
        }

    </tbody>
</table>
<a href="/Product/NewProduct/" class="btn btn-info" style="margin-bottom:50px">ADD NEW PRODUCT</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>