@model MvcInventorySystemProject.Models.Entity.Tbl_Categories

@{
    ViewBag.Title = "NewCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    @*<div>
        <label>Category Name</label>
        <input type="text" class="form-control" name="CategoryName" />
    </div>*@
    <div>
        <label>Category Name</label>
        @Html.TextBoxFor(x => x.CategoryName, new {@class = "form-control"})
        @Html.ValidationMessageFor(x => x.CategoryName, "", new {@style = "color: red"})
    </div>
    <div>
        <button style="margin-top: 20px" class="btn btn-info">Add Category</button>
    </div>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <script type="text/javascript">
    alert('@TempData["SuccessMessage"]');
    </script>
}

