@using MvcInventorySystemProject.Models.Entity
@model List<Tbl_Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
{
    <p>
        <b>Customer Name: </b> @Html.TextBox("p")
        <input type="submit" value="Search" />
    </p>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Surame</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var cust in Model)
        {
            <tr>
                <td>@cust.CustomerID</td>
                <td>@cust.CustomerName</td>
                <td>@cust.CustomerSurname</td>
                <td><a href="/Customer/Delete/@cust.CustomerID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Customer/GetCustomer/@cust.CustomerID" class="btn btn-warning">Update</a></td>
            </tr>
        }

    </tbody>
</table>
<a href="/Customer/NewCustomer/" class="btn btn-info">ADD NEW CUSTOMER</a>


