@using MvcInventorySystemProject.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Tbl_Categories>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.CategoryID</td>
                <td>@cat.CategoryName</td>
                <td><a href="/Category/Delete/@cat.CategoryID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Category/GetCategory/@cat.CategoryID" class="btn btn-warning">Update</a></td>
            </tr>
        }

    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))

<a href="/Category/NewCategory/" class="btn btn-info">ADD NEW CATEGORY</a>

